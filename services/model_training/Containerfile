FROM python:3.11-slim

# Install basics
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Poetry
RUN pip install poetry

# Copy configuration
COPY pyproject.toml ./

# Define build argument for dev dependencies
ARG INSTALL_DEV=false

# Install dependencies
RUN poetry config virtualenvs.create false \
    && if [ "$INSTALL_DEV" = "true" ] ; then poetry install --no-interaction --no-ansi --no-root ; else poetry install --only main --no-interaction --no-ansi --no-root ; fi

# Copy source
COPY src/ ./src/

# Default command
CMD ["python", "-m", "src.main"]
