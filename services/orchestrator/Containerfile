FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Poetry
RUN pip install poetry

# Copy configuration
COPY pyproject.toml poetry.lock ./

# Install dependencies
RUN poetry config virtualenvs.create false \
    && poetry install --only main --no-interaction --no-ansi --no-root

# Set Dagster Home
ENV DAGSTER_HOME=/app

# Copy Dagster configuration and workspace
COPY dagster.yaml workspace.yaml ./

# Create directory for local logs/storage if needed
RUN mkdir -p $DAGSTER_HOME/storage

# Default command (will be overridden by compose)
CMD ["dagster-webserver", "-h", "0.0.0.0", "-p", "3000", "-w", "workspace.yaml"]